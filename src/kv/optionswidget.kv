# optionswidget.kv
#:include src/kv/partials/mainlayout.kv
#:include src/kv/partials/optionswidgetbtn.kv


<OptionsWidget>:
    back_btn: back_btn
    breaks_btn: breaks_btn
    ui_btn: ui_btn

    MainLayout:
        Button:
            id: back_btn
            size_hint: 0.6, 0.15
            pos_hint: {'x': 0.2, 'y': 0.15}
            text: 'BACK'
            bold: 1
            font_size: 20

        OptionsWidgetBtn:
            id: breaks_btn
            pos_hint: {'x': 0.2, 'y': 0.75}
            text: 'BREAKS'

        OptionsWidgetBtn:
            id: ui_btn
            pos_hint: {'x': 0.2, 'y': 0.55}
            text: 'CONFIG'

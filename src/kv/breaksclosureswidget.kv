# breaksclosureswidget.kv
#:include src/kv/partials/mainlayout.kv


<BreaksClosuresWidget>:
    back_btn: back_btn
    apply_btn: apply_btn
    layout: layout

    MainLayout:
        Button:
            id: back_btn
            size_hint: 0.2, 0.15
            pos_hint: {'x': 0.2, 'y': 0.05}
            text: 'BACK'
            bold: 1
            font_size: 20

        Button:
            id: apply_btn
            size_hint: 0.2, 0.15
            pos_hint: {'x': 0.6, 'y': 0.05}
            text: 'APPLY'
            bold: 1
            font_size: 20
            background_normal: ''  # Removes the gray tint
            background_color: 0.357, 0.608, 0.835, 1

        GridLayout:
            id: layout
            size_hint: 0.8, 0.6
            pos_hint: {'x': 0.1, 'y': 0.25}
            rows: 7
            cols: 7
            spacing: 2, 2
            padding: 2, 2
            canvas.before:
                Color:
                    rgba: 0.6, 0.6, 0.6, 1
                Rectangle:
                    pos: self.pos
                    size: self.size


<BreaksClosuresDayBtn@Button>:
    bold: 1
    font_size: 16
    color: 0, 0, 0, 1
    background_normal: ''  # Removes the gray tint
    background_color: 0.9, 0.9, 0.9, 1

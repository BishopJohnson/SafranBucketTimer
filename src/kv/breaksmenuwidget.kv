# breakswidget.kv
#:include src/kv/partials/mainlayout.kv
#:include src/kv/partials/optionswidgetbtn.kv


<BreaksMenuWidget>:
    back_btn: back_btn
    view_breaks_btn: view_breaks_btn
    assign_breaks_btn: assign_breaks_btn
    closures_btn: closures_btn

    MainLayout:
        Button:
            id: back_btn
            size_hint: 0.6, 0.15
            pos_hint: {'x': 0.2, 'y': 0.15}
            text: 'BACK'
            bold: 1
            font_size: 20

        OptionsWidgetBtn:
            id: view_breaks_btn
            pos_hint: {'x': 0.2, 'y': 0.75}
            text: 'VIEW BREAKS'

        OptionsWidgetBtn:
            id: assign_breaks_btn
            pos_hint: {'x': 0.2, 'y': 0.55}
            text: 'ASSIGN BREAKS'

        OptionsWidgetBtn:
            id: closures_btn
            pos_hint: {'x': 0.2, 'y': 0.35}
            text: 'CLOSURES/HOLIDAYS'
